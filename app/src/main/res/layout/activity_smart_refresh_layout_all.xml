<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/default_smart_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bezier下拉刷新"/>

    <Button
        android:id="@+id/classics_header_smart_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ClassicsHeader下拉刷新"/>

    <Button
        android:id="@+id/falsify_header_smart_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FalsifyHeader下拉刷新"/>

    <Button
        android:id="@+id/two_level_header_smart_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TwoLevelHeader下拉刷新"/>

</LinearLayout>
